@{
    ViewData["Title"] = "Historial";
    int cont = 0;
}
@model Queue<ProeyectoGoogleMaps.Models.Pasajero>


<div class="d-flex ">
    <div class="Imagen3 "></div>
    <div class="w-100">
        <div class="d-flex justify-content-center">
            <h3 class="text-center bg-primary rounded-top fw-bold" style="margin:30px 0 2rem 0; padding:1rem 2rem">Pasajeros recogidos</h3>
        </div>


        @if (!(Model.Count > 0))
        {
            <p class="text-center text-danger">No hay registros disponibles</p>
        }
        else
        {
            <div class="row container Historial_contenedor" style="margin-bottom:2rem">
                @while (Model.TryDequeue(out var item))
                {
                    cont++;
                    <div class="bg-white  rounded" style="padding-top: 1rem">
                        <h4 class="text-white text-center fw-bold bg-primary">Pasajero número @cont</h4>
                        <div class="container border border-info">
                            <p class="text-success fw-bold">Nombre: <span class="text-black fw-normal">@item.Nombre</span></p>
                            <p class="text-success fw-bold">Hora: <span class="text-black fw-normal">@Html.DisplayFor(m => item.Hora)</span></p>
                            <p class="text-info fw-bold text-center">Ubicación</p>
                            <div class="d-flex ">
                                <div class=" h-100">
                                    <p class="text-success fw-bold">Latitud: <span class="text-black fw-normal">@item.Ubicacion.Latitud</span></p>
                                    <p class="text-success fw-bold">Longitud: <span class="text-black fw-normal">@item.Ubicacion.Longitud</span></p>
                                </div>
                                <div class="w-25 h-auto d-flex justify-content-center align-items-center"  >
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24" fill="#000000" class="icon icon-tabler icons-tabler-filled icon-tabler-user"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 2a5 5 0 1 1 -5 5l.005 -.217a5 5 0 0 1 4.995 -4.783z" /><path d="M14 14a5 5 0 0 1 5 5v1a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-1a5 5 0 0 1 5 -5h4z" /></svg>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>




